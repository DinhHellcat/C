/* USER CODE END Header */

/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "i2c_lcd.h"
#include "dhtxx.h"
#include "dwt.h"
#include <stdio.h>
#include <string.h>

/* USER CODE BEGIN Includes */
#include "ring_buffer.h" // Thư viện bộ đệm vòng mới thêm
/* USER CODE END Includes */

/* Private defines -----------------------------------------------------------*/
#define WIFI_SSID       "Herukyatto"
#define WIFI_PASSWORD   "1234567890"
#define LOCAL_API_IP    "10.13.71.41"
#define LOCAL_API_PORT  5000

#define MAIN_LOGIC_INTERVAL 1000
#define API_SEND_INTERVAL   10000

/* Private typedef -----------------------------------------------------------*/
typedef enum {
    APP_STATE_INIT,
    APP_STATE_WIFI_CONNECT,
    APP_STATE_RUNNING
} AppState_t;

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;
TIM_HandleTypeDef htim4; // Dùng cho "nhịp tim" hệ thống
UART_HandleTypeDef huart6; // Dùng cho WiFi Module

I2C_LCD_HandleTypeDef lcd;
DHTxx_Drv_t dht22;

// --- Biến cho hệ thống ---
volatile uint32_t ms_ticks = 0;

// --- Biến Ring Buffer (MỚI) ---
RingBuffer wifi_rb;      // Thùng chứa dữ liệu
uint8_t rx_data_temp;    // Biến tạm để hứng từng byte từ ngắt UART

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_I2C1_Init(void);
static void MX_TIM4_Init(void);
static void MX_USART6_UART_Init(void);

void Error_Handler(void);

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* --- 1. KHỞI TẠO CƠ BẢN --- */
  HAL_Init();
  SystemClock_Config();

  /* --- 2. KHỞI TẠO CÁC NGOẠI VI --- */
  MX_GPIO_Init();
  MX_I2C1_Init();
  MX_TIM4_Init();
  MX_USART6_UART_Init();

  /* --- 3. KHỞI TẠO CÁC THƯ VIỆN --- */
  DwtInit();

  // --- Khởi tạo LCD ---
  lcd.hi2c = &hi2c1;
  lcd.address = 0x4E; // Kiểm tra lại địa chỉ nếu LCD không lên (thường là 0x27 hoặc 0x3F, 0x4E)
  lcd_init(&lcd);
  lcd_clear(&lcd);
  lcd_puts(&lcd, "System Init...");
  HAL_Delay(1000);

  // --- Khởi tạo Ring Buffer (QUAN TRỌNG) ---
  RB_Init(&wifi_rb);

  // Kích hoạt ngắt nhận UART lần đầu tiên
  // Dữ liệu nhận được sẽ nhảy vào hàm HAL_UART_RxCpltCallback ở cuối file
  HAL_UART_Receive_IT(&huart6, &rx_data_temp, 1);

  lcd_clear(&lcd);
  lcd_puts(&lcd, "Buffer Ready!");
  HAL_Delay(1000);

  // Khởi tạo DHT22 (Để sẵn, chưa dùng trong test này)
  dht22.DataPort = DHT22_GPIO_Port;
  dht22.DataPin = DHT22_Pin;
  dht22.Type = DHT22;

  // Bắt đầu Timer nhịp tim
  HAL_TIM_Base_Start_IT(&htim4);

  /* --- 4. VÒNG LẶP CHÍNH (TEST MODE) --- */
  while (1)
  {
      // --- PHẦN CODE TEST BUFFER ---

      // 1. Gửi lệnh AT đơn giản mỗi 2 giây
      static uint32_t last_send = 0;
      if (HAL_GetTick() - last_send > 2000) {
          last_send = HAL_GetTick();

          // Gửi lệnh AT để kiểm tra module sống hay chết
          char *cmd = "AT\r\n";
          HAL_UART_Transmit(&huart6, (uint8_t*)cmd, strlen(cmd), 100);

          lcd_clear(&lcd);
          lcd_puts(&lcd, "Sent: AT");
      }

      // 2. Kiểm tra Buffer liên tục xem có gì trả về không
      // Cơ chế: UART nhận -> Ngắt -> Bỏ vào Ring Buffer -> Main loop lấy ra in
      uint8_t data;
      static int lcd_col = 0;

      // Nếu trong thùng có dữ liệu (Module WiFi trả lời)
      while (RB_Get(&wifi_rb, &data)) {
          // Khi bắt đầu nhận ký tự đầu tiên, xóa dòng 2 để in mới
          if (lcd_col == 0) {
              lcd_gotoxy(&lcd, 0, 1);
              // Xóa dòng 2 bằng khoảng trắng thủ công cho nhanh
              lcd_puts(&lcd, "                ");
              lcd_gotoxy(&lcd, 0, 1);
          }

          // Chỉ in ký tự đọc được (bỏ qua ký tự xuống dòng \r \n để màn hình đẹp hơn)
          if (data >= 32 && data <= 126) {
              char str[2] = {data, '\0'};
              lcd_puts(&lcd, str);
              lcd_col++;

              // Nếu tràn màn hình (16 ký tự) thì reset về 0 để in đè lại từ đầu
              if (lcd_col > 15) lcd_col = 0;
          }
      }
  }
}

/* ============================================================================== */
/* KHU VỰC CODE CŨ (ĐÃ TẮT)                               */
/* (Gồm Logic State Machine, HTTP cũ - Giữ lại để tham khảo)            */
