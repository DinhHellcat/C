/* USER CODE BEGIN 0 */

// 1. Hàm Bíp Còi
void annouce_buzzer(int timeout)
{
    HAL_GPIO_WritePin(BUZZER_TEST_Port, BUZZER_TEST_Pin, GPIO_PIN_SET);
    HAL_Delay(timeout);
    HAL_GPIO_WritePin(BUZZER_TEST_Port, BUZZER_TEST_Pin, GPIO_PIN_RESET);
    HAL_Delay(100);
}

// 2. Hàm Đá Relay
void relaytest(uint32_t timeout, int relay_id)
{
    GPIO_TypeDef* port = GPIOA;
    uint16_t pin = 0;
    switch(relay_id) {
        case 1: pin = RELAY1_Pin; break;
        case 2: pin = RELAY2_Pin; break;
        case 3: pin = RELAY3_Pin; break;
        default: return;
    }
    HAL_GPIO_WritePin(port, pin, GPIO_PIN_SET);
    HAL_Delay(timeout);
    HAL_GPIO_WritePin(port, pin, GPIO_PIN_RESET);
}

// 3. GỬI LỆNH AT THEO CƠ CHẾ POLLING (BLOCKING)
// Hàm này sẽ treo ở đây đợi phản hồi, nhưng an toàn hơn ngắt
bool ESP_Polling_Send(char *cmd, char *target_response, int timeout_ms) {

    // Xóa buffer cũ
    memset(rx_buffer, 0, sizeof(rx_buffer));
    int index = 0;

    // Gửi lệnh đi
    HAL_UART_Transmit(&huart6, (uint8_t*)cmd, strlen(cmd), 1000);

    uint32_t start_time = HAL_GetTick();

    // Vòng lặp chờ phản hồi từng byte một
    while ((HAL_GetTick() - start_time) < timeout_ms) {
        uint8_t ch;
        // Đọc 1 byte, chờ tối đa 10ms cho byte đó
        if (HAL_UART_Receive(&huart6, &ch, 1, 10) == HAL_OK) {
            rx_buffer[index++] = ch;
            if (index >= sizeof(rx_buffer)) index = 0; // Tránh tràn bộ nhớ
            rx_buffer[index] = '\0'; // Kết thúc chuỗi

            // Kiểm tra xem chuỗi mục tiêu đã xuất hiện chưa
            if (strstr(rx_buffer, target_response) != NULL) {
                return true; // Thành công
            }
        }
    }
    return false; // Hết giờ mà không thấy phản hồi
}

// 4. KẾT NỐI WIFI (DÙNG POLLING)
void WiFi_Connect_Polling(void) {
    char cmd[128];

    annouce_buzzer(200); // Bíp bắt đầu

    // Thoát Transparent cũ (nếu có)
    HAL_UART_Transmit(&huart6, (uint8_t*)"+++", 3, 1000);
    HAL_Delay(1000);

    while (1) {
        // BƯỚC 1: Kiểm tra AT
        // Lặp cho đến khi Module trả lời OK
        while (!ESP_Polling_Send("AT\r\n", "OK", 1000)) {
            // Nếu lỗi, thử gửi lại +++
            HAL_UART_Transmit(&huart6, (uint8_t*)"+++", 3, 1000);
            HAL_Delay(500);
            // Nháy Relay báo hiệu đang kẹt ở AT
            HAL_GPIO_TogglePin(RELAY1_Port, RELAY1_Pin);
        }
        HAL_GPIO_WritePin(RELAY1_Port, RELAY1_Pin, GPIO_PIN_RESET); // Tắt relay
        annouce_buzzer(50);

        // Reset
        ESP_Polling_Send("AT+RST\r\n", "ready", 5000); // Chờ chữ "ready" sau reset
        HAL_Delay(1000);
        ESP_Polling_Send("ATE0\r\n", "OK", 1000);

        // BƯỚC 2: Mode Station
        while (!ESP_Polling_Send("AT+WMODE=1,1\r\n", "OK", 2000)) {
            HAL_Delay(500);
        }

        // BƯỚC 3: Kết nối Wifi
        sprintf(cmd, "AT+WJAP=%s,%s\r\n", WIFI_SSID, WIFI_PASSWORD);
        // Chờ tối đa 20s cho Wifi
        while (!ESP_Polling_Send(cmd, "+EVENT:WIFI_GOT_IP", 20000)) {
            annouce_buzzer(500); // Bíp dài báo lỗi Wifi
            // Nếu lỗi quá lâu, break ra để reset lại từ đầu
            break;
        }
        // Nếu trong buffer có GOT_IP thì đi tiếp, không thì vòng lặp lớn sẽ chạy lại
        if (strstr(rx_buffer, "+EVENT:WIFI_GOT_IP") == NULL) continue;

        annouce_buzzer(100); annouce_buzzer(100);

        // BƯỚC 4: Kết nối Server
        sprintf(cmd, "AT+SOCKET=4,%s,%d\r\n", SERVER_IP, SERVER_PORT);
        // Chờ 5s, nếu thất bại thử lại
        while (1) {
             if (ESP_Polling_Send(cmd, "connect success", 5000)) break;
             if (strstr(rx_buffer, "ALREADY CONNECTED")) break;
             HAL_Delay(2000);
        }

        // BƯỚC 5: Transparent Mode
        if (ESP_Polling_Send("AT+SOCKETTT\r\n", ">", 3000)) {
            annouce_buzzer(100); annouce_buzzer(100); annouce_buzzer(100);

            // Gửi Handshake
            char handshake[32];
            sprintf(handshake, "CONNECT:%s\n", DEVICE_NODE_ID);
            HAL_UART_Transmit(&huart6, (uint8_t*)handshake, strlen(handshake), 1000);

            return; // XONG! Về Main
        }
    }
}

int Read_ADC_Channel(uint32_t channel) {
    ADC_ChannelConfTypeDef sConfig = {0};
    sConfig.Channel = channel;
    sConfig.Rank = 1;
    sConfig.SamplingTime = ADC_SAMPLETIME_15CYCLES;
    HAL_ADC_ConfigChannel(&hadc1, &sConfig);

    HAL_ADC_Start(&hadc1);
    HAL_ADC_PollForConversion(&hadc1, 100);
    int val = HAL_ADC_GetValue(&hadc1);
    HAL_ADC_Stop(&hadc1);
    return val;
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();
  MX_ADC1_Init();
  MX_USART6_UART_Init();

  /* USER CODE BEGIN 2 */
  // LƯU Ý: KHÔNG GỌI HAL_UART_Receive_IT Ở ĐÂY NỮA

  // Test sự sống
  relaytest(200, 1);
  annouce_buzzer(100);

  // Kết nối Wifi (Polling)
  WiFi_Connect_Polling();
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      // 1. ĐỌC CẢM BIẾN
      gas_mq2 = Read_ADC_Channel(ADC_CHANNEL_0);
      gas_mq135 = Read_ADC_Channel(ADC_CHANNEL_1);
      motion = HAL_GPIO_ReadPin(PIR_Port, PIR_Pin);

      // Giả lập nhiệt độ tăng dần để test (hoặc đọc DHT thật)
      // temp = DHT_Read();
      temp = 30.5; // Giá trị test

      // 2. XỬ LÝ SỰ CỐ (LOCAL ALARM) - KHÔNG ĐƯỢC DÙNG WHILE LOOP CHẶN
      // Logic: Nếu vượt ngưỡng -> Bật còi. Nếu không -> Tắt còi.
      // Việc này xảy ra song song với việc gửi dữ liệu.

      if (gas_mq2 > GAS_THRESHOLD || temp > TEMP_THRESHOLD) {
          // Bật còi cảnh báo tại chỗ
          HAL_GPIO_WritePin(BUZZER_TEST_Port, BUZZER_TEST_Pin, GPIO_PIN_SET);

          // Có thể nháy Relay báo hiệu
          HAL_GPIO_TogglePin(RELAY1_Port, RELAY1_Pin);
      } else {
          // Tắt còi (Nếu Backend không yêu cầu bật - Logic Backend sẽ xử lý sau)
          // Ở đây ta ưu tiên an toàn: Hết khói thì tắt còi local
          HAL_GPIO_WritePin(BUZZER_TEST_Port, BUZZER_TEST_Pin, GPIO_PIN_RESET);
          HAL_GPIO_WritePin(RELAY1_Port, RELAY1_Pin, GPIO_PIN_RESET);
      }

      // 3. GỬI DỮ LIỆU JSON (Quan trọng: Vẫn gửi dù đang cháy)
      memset(tx_buffer, 0, sizeof(tx_buffer));
      sprintf(tx_buffer, "{\"temp\":%.1f,\"hum\":%.1f,\"gas_mq2\":%d,\"gas_mq135\":%d,\"motion\":%d}\n",
              temp, hum, gas_mq2, gas_mq135, motion);

      HAL_UART_Transmit(&huart6, (uint8_t*)tx_buffer, strlen(tx_buffer), 1000);

      // 4. CHECK KẾT NỐI (POLLING CHECK)
      // Đọc thử xem có dữ liệu gì từ Wifi không (ví dụ lệnh điều khiển hoặc thông báo lỗi)
      // Dùng timeout ngắn để không chặn vòng lặp
      uint8_t ch;
      // Đọc vét buffer xem có chữ CLOSED hay ERROR không
      // Lưu ý: Đang ở chế độ Transparent, nên nếu Server gửi lệnh xuống, ta cũng nhận ở đây
      if (HAL_UART_Receive(&huart6, &ch, 1, 10) == HAL_OK) {
           // Ở đây ta chỉ check đơn giản, nếu muốn xử lý lệnh từ Server thì phải gom vào buffer
           // Nhưng mục tiêu chính là check kết nối
           if (ch == 'C') { // Giả sử bắt đầu chữ CLOSED
               // Đọc thêm vài byte nữa để chắc chắn... (Logic đơn giản hóa)
           }
      }

      // Delay giữa các lần gửi
      HAL_Delay(UPLINK_INTERVAL);

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

// ... (Giữ nguyên phần SystemClock_Config và MX_Init ở cuối file cũ)
/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 180;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV4;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV2;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_5) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief ADC1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_ADC1_Init(void)
{
  ADC_ChannelConfTypeDef sConfig = {0};

  hadc1.Instance = ADC1;
  hadc1.Init.ClockPrescaler = ADC_CLOCK_SYNC_PCLK_DIV4;
  hadc1.Init.Resolution = ADC_RESOLUTION_12B;
  hadc1.Init.ScanConvMode = DISABLE;
  hadc1.Init.ContinuousConvMode = DISABLE;
  hadc1.Init.DiscontinuousConvMode = DISABLE;
  hadc1.Init.ExternalTrigConvEdge = ADC_EXTERNALTRIGCONVEDGE_NONE;
  hadc1.Init.ExternalTrigConv = ADC_SOFTWARE_START;
  hadc1.Init.DataAlign = ADC_DATAALIGN_RIGHT;
  hadc1.Init.NbrOfConversion = 1;
  hadc1.Init.DMAContinuousRequests = DISABLE;
  hadc1.Init.EOCSelection = ADC_EOC_SINGLE_CONV;
  if (HAL_ADC_Init(&hadc1) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief USART6 Initialization Function
  * @param None
  * @retval None
  */
static void MX_USART6_UART_Init(void)
{
  huart6.Instance = USART6;
  huart6.Init.BaudRate = 115200;
  huart6.Init.WordLength = UART_WORDLENGTH_8B;
  huart6.Init.StopBits = UART_STOPBITS_1;
  huart6.Init.Parity = UART_PARITY_NONE;
  huart6.Init.Mode = UART_MODE_TX_RX;
  huart6.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart6.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart6) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOA, LED_TEST_Pin|BUZZER_TEST_Pin|RELAY1_Pin|RELAY2_Pin|RELAY3_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pins : LED_TEST_Pin BUZZER_TEST_Pin RELAY1_Pin RELAY2_Pin RELAY3_Pin */
  GPIO_InitStruct.Pin = LED_TEST_Pin|BUZZER_TEST_Pin|RELAY1_Pin|RELAY2_Pin|RELAY3_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pins : MQ2_Pin MQ135_Pin */
  GPIO_InitStruct.Pin = MQ2_Pin|MQ135_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_ANALOG;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);

  /*Configure GPIO pins : PIR_Pin DHT_Pin */
  GPIO_InitStruct.Pin = PIR_Pin|DHT_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOA, &GPIO_InitStruct);
}

void Error_Handler(void)
{
  __disable_irq();
  while (1) { }
}
