/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;
UART_HandleTypeDef huart6;

/* USER CODE BEGIN PV */
// Buffer nhận dữ liệu (Polling)
char rx_buffer[1024];
char tx_buffer[256];

// Biến cảm biến
float temp = 0.0f;
float hum = 0.0f;
int gas_mq2 = 0;
int gas_mq135 = 0;
int motion = 0;
/* USER CODE END PV */

